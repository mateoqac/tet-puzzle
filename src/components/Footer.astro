---
interface Props {
  showLegalLinks?: boolean;
}

const { showLegalLinks = true } = Astro.props;
---

<footer class="site-footer">
  <div class="footer-content">
    <nav class="footer-links">
      <a href="/how-to-play">How to Play</a>
      <span class="separator">|</span>
      <a href="/faq">FAQ</a>
      {showLegalLinks && (
        <>
          <span class="separator">|</span>
          <a href="/privacy">Privacy Policy</a>
          <span class="separator">|</span>
          <a href="/terms">Terms of Service</a>
        </>
      )}
    </nav>
    <p class="copyright">
      <span class="copyright-icon">&copy;</span> 2025 Tet Puzzle. All rights reserved.
    </p>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: 3rem;
    padding: 1.5rem 1rem;
    border-top: 1px solid #ddd;
    text-align: center;
  }

  .footer-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .footer-links {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .footer-links a:hover {
    text-decoration: underline;
    color: #333;
  }

  .separator {
    color: #ccc;
    margin: 0 0.75rem;
  }

  .copyright {
    color: #888;
    font-size: 0.85rem;
    margin: 0;
  }

  .copyright-icon {
    font-style: normal;
  }

  @media (max-width: 768px) {
    .site-footer {
      margin-top: 2rem;
      padding: 1rem 0.75rem;
    }

    .footer-links a {
      font-size: 0.85rem;
    }

    .copyright {
      font-size: 0.8rem;
    }
  }
</style>
