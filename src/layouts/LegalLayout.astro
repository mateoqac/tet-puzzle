---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  lastUpdated?: string;
}

const {
  title,
  description,
  canonicalPath,
  lastUpdated = "December 2024",
} = Astro.props;
---

<BaseLayout title={title} description={description} canonicalPath={canonicalPath}>
  <main class="legal-page">
    <nav class="nav-back">
      <a href="/">&larr; Back to Game</a>
    </nav>

    <article class="legal-content">
      <h1>{title.replace(" - Tetonor", "")}</h1>
      <p class="last-updated">Last updated: {lastUpdated}</p>

      <slot />
    </article>
  </main>
</BaseLayout>

<style>
  .legal-page {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .nav-back {
    margin-bottom: 2rem;
  }

  .nav-back a {
    color: #333;
    text-decoration: none;
    font-size: 1rem;
  }

  .nav-back a:hover {
    text-decoration: underline;
  }

  .legal-content h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: #222;
  }

  .last-updated {
    color: #666;
    font-style: italic;
    margin-bottom: 2rem;
  }

  .legal-content :global(section) {
    margin-bottom: 2rem;
  }

  .legal-content :global(h2) {
    font-size: 1.4rem;
    margin-bottom: 0.75rem;
    color: #333;
  }

  .legal-content :global(h3) {
    font-size: 1.1rem;
    margin: 1rem 0 0.5rem;
    color: #444;
  }

  .legal-content :global(p) {
    margin-bottom: 1rem;
    color: #444;
  }

  .legal-content :global(ul) {
    margin: 0.5rem 0 1rem 1.5rem;
    color: #444;
  }

  .legal-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .legal-content :global(a) {
    color: #0066cc;
  }

  @media (max-width: 768px) {
    .legal-content h1 {
      font-size: 1.6rem;
    }

    .legal-content :global(h2) {
      font-size: 1.2rem;
    }
  }
</style>
