---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArchiveList from "../../components/ArchiveList";

const title = "Daily Challenge Archive | Tetonor";
const description = "Browse all past daily puzzles. Track your progress and play previous challenges.";
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath="/daily/archive"
  showFooter={false}
>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <ArchiveList client:load />
  </main>
</BaseLayout>
